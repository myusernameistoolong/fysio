@model EditEmail

@{
    ViewData["Title"] = "EditEmail";
}

<h1>Edit email address</h1>
<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmail" method="post">
            <span class="font-weight-light font-italic">* is required.</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">Email: *</label>
                <input type="email" asp-for="Email" value="@ViewBag.Patient.Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark-red"><i class="fas fa-save"></i> Save</button>
            <a class="btn btn-secondary" href="javascript:history.go(-1)" role="button"><i class="fas fa-undo"></i> Return</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
